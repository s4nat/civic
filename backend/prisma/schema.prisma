datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL") // uses connection pooling
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  company_id      Int      @id @default(autoincrement())
  company_name    String   @db.VarChar(256)
  fund_target_category    String   @db.VarChar(256)
  fund_amount     Int
  company_link    String   @db.Varchar(256)
  action_taken    Boolean?  // Added boolean field for action taken indicator
}

model User {
  user_id       String   @id @db.VarChar(256) @unique
  User_name     String   @db.VarChar(256)
  user_email    String?  @db.VarChar(256) @unique
}

model Project {
  project_id Int @id @default(autoincrement())
  drive_id Int
}

model Drive {
  drive_id Int @id @default(autoincrement())
  drive_amount Int
  drive_category String @db.Varchar(256)
  drive_month Int
  drive_description String @db.Varchar(256)
  drive_name String @db.Varchar(256)
}


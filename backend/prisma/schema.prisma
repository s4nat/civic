datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  company_id           Int    @id @default(autoincrement())
  company_name         String @db.VarChar(256)
  fund_target_category String @db.VarChar(256)
  fund_amount          Int
  company_link         String @db.VarChar(256)
}

model Project {
  project_id            Int        @id @default(autoincrement())
  drive                 Drive      @relation(fields: [drive_id], references: [drive_id])
  drive_id              String     @db.VarChar(256)
  project_name          String     @db.VarChar(256)
  project_description   String     @db.VarChar(256)
  project_donations     Int
  project_target_amount Int
  project_match_amount  Int
  Donation              Donation[]
}

model User {
  user_id   String     @id @unique
  user_name String     @db.VarChar(256)
  Donation  Donation[]
}

model Drive {
  drive_id          String    @id @unique @db.VarChar(256)
  drive_amount      Int
  drive_category    String    @db.VarChar(256)
  drive_month       Int
  drive_description String    @db.VarChar(256)
  drive_name        String    @db.VarChar(256)
  Project           Project[]
}

model Donation {
  donation_id     Int     @id @unique
  project         Project @relation(fields: [project_id], references: [project_id])
  project_id      Int
  user            User    @relation(fields: [user_id], references: [user_id])
  user_id         String  @db.VarChar(256)
  donation_amount Int
}
